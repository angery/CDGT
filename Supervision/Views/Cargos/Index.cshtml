@model IEnumerable<Supervision.Models.CargoType>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section main {<h2>
    Типы грузов</h2>
    <p>
        @Html.ActionLink("Добавить", "Create")
    </p>
    <table>
        <tr>
            <th>
                Наименование
            </th>
            <th>
            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TITLE)
                </td>
                <td>
                    @Html.ActionLink("Изменить", "Edit", new { id = item.CODE }) |
                    @Html.ActionLink("Информация", "Details", new { id = item.CODE }) |
                    @Html.ActionLink("Удалить", "Delete", new { id = item.CODE })
                </td>
            </tr>
        }
    </table>
}
