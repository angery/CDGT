@model IEnumerable<Supervision.Models.Organization>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section main {
    <h2>
        Организации</h2>
    <p>
        @Html.ActionLink("Добавить", "Create")
    </p>
    <table>
        <tr>
            <th>
                Наименование
            </th>
            <th>
            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TITLE)
                </td>
                <td>
                    @Html.ActionLink("Изменить", "Edit", new { id = item.ORGANIZATION_ID }) |
                    @Html.ActionLink("Информация", "Details", new { id = item.ORGANIZATION_ID }) |
                    @Html.ActionLink("Удалить", "Delete", new { id = item.ORGANIZATION_ID })
                </td>
            </tr>
        }
    </table>
}
